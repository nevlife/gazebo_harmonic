    <xacro:include filename="$(find hunter2_base)/urdf/rear_box_link.xacro"/>
    <xacro:include filename="$(find hunter2_base)/urdf/front_wheels.xacro"/>
    <xacro:include filename="$(find hunter2_base)/urdf/rear_wheels.xacro"/>
