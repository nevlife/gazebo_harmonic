<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- ========== Front Left Steering Link & Wheel ========== -->

  <link name="front_steer_left_link">
    <inertial>
      <origin xyz="-0.012614 1.8116E-05 0.0023132" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.0222" ixy="0.0" ixz="0.0"
               iyy="0.0222" iyz="0.0" izz="0.0378075"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
      <material name="">
        <color rgba="0.79216 0.81961 0.93333 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <joint name="front_steer_left_joint" type="continuous">
    <origin xyz="0.37142 0.29199 -0.1955" rpy="1.5708 0 0"/>
    <parent link="chassis"/>
    <child link="front_steer_left_link"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.69" upper="0.69" effort="1000" velocity="1000"/>
    <dynamics damping="0.7"/>
  </joint>

  <link name="front_left_wheel_link">
    <inertial>
      <origin xyz="-6.5774E-06 2.0242E-05 -0.0096386" rpy="0 0 0"/>
      <mass value="7"/>
      <inertia ixx="0.063724" ixy="0" ixz="0"
               iyy="0.063724" iyz="0" izz="0.11072"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find hunter2_base)/meshes/front_left_wheel_link.stl"/>
      </geometry>
      <material name="">
        <color rgba="0.79216 0.81961 0.93333 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.165" length="0.14"/>
      </geometry>
    </collision>
  </link>

  <joint name="front_left_wheel_joint" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="front_steer_left_link"/>
    <child link="front_left_wheel_link"/>
    <axis xyz="0 0 -1"/>
    <dynamics damping="0.7"/>
  </joint>

